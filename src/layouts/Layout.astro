		<!-- Canonical -->
		<link rel="canonical" href="https://centrojuridicointernacional.co/" />

		<!-- Favicon -->
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

		{imgLayout && <link rel="preload" as="image" href={imgLayout} fetchpriority="high" />}

		<!-- Astro ViewTransitions -->
		<ClientRouter />
		<Analytics />
		<SpeedInsights />

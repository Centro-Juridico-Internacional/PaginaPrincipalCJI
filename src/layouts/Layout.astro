		<slot />
		<WhatsApp />
		<BotonesMain />
		<Footer />
	</body>
</html>

<script src="@scripts/resizeMainPage.js"></script>
<script>
	// --- Comunicación con el dominio principal (WordPress) ---
	function sendPathToParent() {
		try {
			const currentPath = window.location.pathname + window.location.search + window.location.hash;
			const title = document.title;
			const favicon =
				(document.querySelector("link[rel~='icon']") as HTMLLinkElement)?.href || null;

			window.parent.postMessage(
				{ path: currentPath, title, favicon },
				'https://centrojuridicointernacional.co'
			);
		} catch (err) {
			console.warn('No se pudo enviar la ruta al dominio padre:', err);
		}
	}

	// Enviar ruta inicial
	sendPathToParent();

	// Detectar cambios de ruta
	let lastPath = window.location.pathname;
	const observer = new MutationObserver(() => {
		const newPath = window.location.pathname;
		if (newPath !== lastPath) {
			lastPath = newPath;
			sendPathToParent();
		}
	});
	observer.observe(document.body, { subtree: true, childList: true });

	// Detectar navegación atrás/adelante
	window.addEventListener('popstate', sendPathToParent);

	// Detectar transiciones de Astro
	document.addEventListener('astro:after-swap', sendPathToParent);
</script>

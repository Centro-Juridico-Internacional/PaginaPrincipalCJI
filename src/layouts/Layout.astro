		<slot />
		<WhatsApp />
		<BotonesMain />
		<Footer />
	</body>
</html>

<script src="@scripts/resizeMainPage.js"></script>
<script type="module" is:inline>
	const TARGET_ORIGIN = 'https://centrojuridicointernacional.co';

	const buildPayload = () => {
		const faviconLink = document.querySelector("link[rel~='icon']");

		return {
			path: window.location.pathname + window.location.search + window.location.hash,
			title: document.title,
			favicon: faviconLink instanceof HTMLLinkElement ? faviconLink.href : null
		};
	};

	const sendPathToParent = () => {
		try {
			window.parent.postMessage(buildPayload(), TARGET_ORIGIN);
		} catch (error) {
			console.warn('No se pudo enviar la ruta al dominio padre:', error);
		}
	};

	sendPathToParent();

	let lastPath = window.location.pathname + window.location.search + window.location.hash;
	const observer = new MutationObserver(() => {
		const nextPath = window.location.pathname + window.location.search + window.location.hash;
		if (nextPath === lastPath) {
			return;
		}
		lastPath = nextPath;
		sendPathToParent();
	});
	observer.observe(document.body, { subtree: true, childList: true });

	const cleanupCallbacks = [];
	const addListener = (target, eventName, handler) => {
		target.addEventListener(eventName, handler);
		cleanupCallbacks.push(() => target.removeEventListener(eventName, handler));
	};

	addListener(window, 'popstate', sendPathToParent);
	addListener(document, 'astro:after-swap', sendPathToParent);

	// Enviar ruta inicial
	sendPathToParent();

	// Detectar cambios de ruta
	observer.observe(document.body, { subtree: true, childList: true });

	// Detectar navegación atrás/adelante
	window.addEventListener('popstate', sendPathToParent);

	// Detectar transiciones de Astro
	document.addEventListener('astro:after-swap', sendPathToParent);

	const cleanup = () => {
		cleanupCallbacks.splice(0).forEach((cb) => cb());
		observer.disconnect();
	};

	document.addEventListener('astro:before-swap', cleanup, { once: true });
	window.addEventListener('pagehide', cleanup, { once: true });

	export {};
</script>

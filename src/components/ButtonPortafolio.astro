---
// ButtonPortafolio.astro
interface Props {
	dataSlide: number;
	text: string;
}
const { dataSlide, text } = Astro.props;
---

<button
	type="button"
	data-slide={dataSlide}
	onclick={`document.dispatchEvent(new CustomEvent('slide-change', { detail: ${dataSlide} }))`}
>
	<div
		class="group relative z-50 mb-4 inline-flex items-center justify-start overflow-hidden rounded-xl bg-green-600 px-6 py-3 font-medium transition-all"
	>
		<span
			class="absolute top-0 right-0 inline-block h-4 w-4 rounded bg-green-800 transition-all duration-500 ease-in-out group-hover:-mt-4 group-hover:-mr-4"
		>
			<span
				class="absolute top-0 right-0 h-5 w-5 translate-x-1/2 -translate-y-1/2 rotate-45 bg-white"
			></span>
		</span>
		<span
			class="absolute bottom-0 left-0 h-full w-full -translate-x-full translate-y-full rounded-2xl bg-green-700 transition-all delay-200 duration-500 ease-in-out group-hover:mb-12 group-hover:translate-x-0"
		></span>
		<span
			class="relative w-full text-left text-white transition-colors duration-200 ease-in-out group-hover:text-white"
		>
			{text}
		</span>
	</div>
</button>

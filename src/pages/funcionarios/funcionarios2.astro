---
import Layout from '@layouts/Layout.astro';
import FuncionariosSection from '@sections/funcionarios/FuncionariosSection.astro';
---

<Layout imgLayout="/familiaCJI/familiaIMG.webp" title="Familia CJI" boolean={true}>
	<FuncionariosSection />
</Layout>
<style>
	/* Optimizaciones adicionales para mobile */
	@media (max-width: 640px) {
		.min-h-\[75vh\] {
			min-height: 100vh;
			padding-top: 2rem;
			padding-bottom: 2rem;
		}
	}

	/* Mejoras para tablets */
	@media (min-width: 641px) and (max-width: 1024px) {
		.min-h-\[75vh\] {
			min-height: 80vh;
		}
	}

	/* Optimización para pantallas muy pequeñas */
	@media (max-width: 375px) {
		.min-h-\[75vh\] {
			padding: 1rem;
		}
	}

	/* Mejoras para landscape en móviles */
	@media (max-height: 500px) and (orientation: landscape) {
		.min-h-\[75vh\] {
			min-height: 100vh;
			padding: 1rem;
		}
	}
</style>
